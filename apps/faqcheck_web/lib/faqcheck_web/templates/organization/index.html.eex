<h1>Listing Organizations</h1>

<table>
  <thead>
    <tr>
      <th><%= gettext "Name" %></th>
      <th><%= gettext "Description" %></th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for organization <- @organizations do %>
    <tr>
      <td><%= organization.name %></td>
      <td><%= organization.description %></td>

      <td>
        <span><%= link gettext("Show"), to: Routes.organization_path(@conn, :show, @locale, organization) %></span>
        <span><%= link gettext("Edit"), to: Routes.organization_path(@conn, :edit, @locale, organization) %></span>
        <span><%= link gettext("Delete"), to: Routes.organization_path(@conn, :delete, @locale, organization), method: :delete, data: [confirm: gettext("Are you sure?")] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link gettext("New Organization"), to: Routes.organization_path(@conn, :new, @locale) %></span>
