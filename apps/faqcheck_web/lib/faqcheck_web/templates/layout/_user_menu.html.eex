<ul>
<%= if @current_user do %>
  <li><%= @current_user.email %></li>
  <li><%= link "Settings", to: Routes.user_settings_path(@conn, :edit, @locale) %></li>
  <li><%= link "Log out", to: Routes.user_session_path(@conn, :delete, @locale), method: :delete %></li>
<% else %>
  <li><%= link "Register", to: Routes.user_registration_path(@conn, :new, @locale) %></li>
  <li><%= link "Log in", to: Routes.user_session_path(@conn, :new, @locale) %></li>
<% end %>
</ul>
